{
  "name": "@lindorm-io/koa-mongo",
  "description": "Mongo Connection middleware for @lindorm-io/koa applications",
  "version": "0.2.3",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/koa-mongo.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/koa-mongo/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "concurrently 'rimraf coverage' 'rimraf dist'",
    "coverage": "jest --coverage --forceExit",
    "lint": "eslint --ext .ts ./src/",
    "lint:fix": "eslint --ext .ts ./src/ --fix",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prepublishOnly": "npm run clean && concurrently 'npm run build' 'npm run coverage'",
    "preversion": "npm run validate",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "test": "jest --config jest.config.js --forceExit",
    "test:clear": "jest --clearCache",
    "test:watch": "jest --config jest.config.js --watch --",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "update": "ncu -a && npm install",
    "validate": "npm run test:clear && npm run lint && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@lindorm-io/core": "^0.1.7"
  },
  "peerDependencies": {
    "@lindorm-io/koa": ">=0.1.0",
    "@lindorm-io/mongo": ">=0.2.0"
  },
  "devDependencies": {
    "@lindorm-io/koa": "^0.1.3",
    "@lindorm-io/mongo": "^0.2.5",
    "@lindorm-io/winston": "^0.1.1",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.15",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/mongodb": "^3.5.34",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "koa": ">=2.13.0",
    "lint-staged": "^10.5.2",
    "mockdate": "^3.0.2",
    "prettier": "2.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  }
}
